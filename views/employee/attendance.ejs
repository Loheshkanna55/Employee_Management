
<div class="container-fluid" style="margin-left: -100px;">
  <div class="row">
    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
      <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">My Attendance</h1>
      </div>

      <% if (attendances && attendances.length > 0) { %>
        <div class="table-responsive">
          <table class="table table-striped table-hover">
            <thead>
              <tr>
                <th>Date</th>
                <th>Check In</th>
                <th>Check Out</th>
                <th>Status</th>
                <th>Working Hours</th>
              </tr>
            </thead>
            <tbody>
              <% attendances.forEach(attendance => { %>
                <tr>
                  <td><%= moment(attendance.date).format('MMM D, YYYY') %></td>
                  <td><%= attendance.checkIn ? moment(attendance.checkIn).format('hh:mm A') : '--' %></td>
                  <td><%= attendance.checkOut ? moment(attendance.checkOut).format('hh:mm A') : '--' %></td>
                  <td>
                    <span class="badge <%= attendance.status === 'present' ? 'bg-success' : 'bg-warning' %>">
                      <%= attendance.status.charAt(0).toUpperCase() + attendance.status.slice(1) %>
                    </span>
                  </td>
                  <td><%= attendance.workingHours || '--' %></td>
                </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
      <% } else { %>
        <div class="alert alert-info">No attendance records found</div>
      <% } %>
    </main>
  </div>
</div>

