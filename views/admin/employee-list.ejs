<div class="container-fluid" style="margin-left: -100px;">
    <div class="row">  
      <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
          <h1 class="h2">Employee Management</h1>
          <a href="/admin/employees/add" class="btn btn-primary">
            <i class="fas fa-plus me-1"></i> Add Employee
          </a>
        </div>
  
        <div class="card shadow-sm mb-4">
          <div class="card-body">
            <div class="table-responsive">
              <table class="table table-hover">
                <thead>
                  <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Department</th>
                    <th>Position</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% employees.forEach(emp => { %>
                    <tr>
                      <td><%= emp.name %></td>
                      <td><%= emp.email %></td>
                      <td><%= emp.department %></td>
                      <td><%= emp.position %></td>
                      <td>
                        <a href="/admin/employees/<%= emp._id %>" class="btn btn-sm btn-info">
                          <i class="fas fa-eye"></i>
                        </a>
                        <a href="/admin/employees/<%= emp._id %>/edit" class="btn btn-sm btn-warning">
                          <i class="fas fa-edit"></i>
                        </a>
                        <form action="/admin/employees/<%= emp._id %>?_method=DELETE" method="POST" class="d-inline">
                          <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Delete this employee?')">
                            <i class="fas fa-trash"></i>
                          </button>
                        </form>
                      </td>
                    </tr>
                  <% }); %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </main>
    </div>
  </div>