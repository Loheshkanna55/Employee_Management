<div class="container-fluid">
    <div class="row">
      <%- include('../partials/sidebar') %>
  
      <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
          <h1 class="h2"><%= employee.name %>'s Attendance</h1>
          <form class="row g-2">
            <div class="col-auto">
              <select class="form-select" name="month">
                <% for (let i = 1; i <= 12; i++) { %>
                  <option value="<%= i %>" <%= i === month ? 'selected' : '' %>>
                    <%= moment().month(i-1).format('MMMM') %>
                  </option>
                <% } %>
              </select>
            </div>
            <div class="col-auto">
              <select class="form-select" name="year">
                <% for (let i = 2020; i <= new Date().getFullYear(); i++) { %>
                  <option value="<%= i %>" <%= i === year ? 'selected' : '' %>><%= i %></option>
                <% } %>
              </select>
            </div>
            <div class="col-auto">
              <button type="submit" class="btn btn-primary">Filter</button>
            </div>
          </form>
        </div>
  
        <div class="card shadow-sm">
          <div class="card-body">
            <% if (attendanceData.length > 0) { %>
              <div class="table-responsive">
                <table class="table table-hover">
                  <thead>
                    <tr>
                      <th>Date</th>
                      <th>Check-In</th>
                      <th>Check-Out</th>
                      <th>Status</th>
                      <th>Hours</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% attendanceData.forEach(att => { %>
                      <tr>
                        <td><%= moment(att.date).format('MMM D, YYYY') %></td>
                        <td><%= att.checkIn ? moment(att.checkIn).format('h:mm A') : '--' %></td>
                        <td><%= att.checkOut ? moment(att.checkOut).format('h:mm A') : '--' %></td>
                        <td>
                          <span class="badge bg-<%= att.status === 'present' ? 'success' : 'warning' %>">
                            <%= att.status %>
                          </span>
                        </td>
                        <td><%= att.workingHours || '--' %></td>
                      </tr>
                    <% }); %>
                  </tbody>
                </table>
              </div>
            <% } else { %>
              <p class="text-muted">No attendance records for this period</p>
            <% } %>
          </div>
        </div>
      </main>
    </div>
  </div>