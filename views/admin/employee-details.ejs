<div class="container-fluid" style="margin-left: -100px;">
    <div class="row">
      <%- include('../partials/sidebar') %>
  
      <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
        <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
          <h1 class="h2">Employee Details</h1>
          <div>
            <a href="/admin/employees/<%= employee._id %>/edit" class="btn btn-warning me-2">
              <i class="fas fa-edit me-1"></i> Edit
            </a>
            <form action="/admin/employees/<%= employee._id %>?_method=DELETE" method="POST" class="d-inline">
              <button type="submit" class="btn btn-danger" onclick="return confirm('Delete this employee?')">
                <i class="fas fa-trash me-1"></i> Delete
              </button>
            </form>
          </div>
        </div>
  
        <div class="row">
          <!-- Profile Card -->
          <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
              <div class="card-header bg-primary text-white">
                <h5 class="mb-0">Profile</h5>
              </div>
              <div class="card-body text-center">
                <img src="<%= employee.profileImage || '/images/default-avatar.png' %>" class="rounded-circle mb-3" width="120" height="120">
                <h4><%= employee.name %></h4>
                <p class="text-muted"><%= employee.position %></p>
  
                <div class="text-start">
                  <p><strong>Email:</strong> <%= employee.email %></p>
                  <p><strong>Department:</strong> <%= employee.department %></p>
                  <p><strong>Contact:</strong> <%= employee.contactNumber || 'N/A' %></p>
                  <p><strong>Address:</strong> <%= employee.address || 'N/A' %></p>
                  <p><strong>Joined:</strong> <%= moment(employee.joinDate).format('MMM D, YYYY') %></p>
                </div>
              </div>
            </div>
          </div>
  
          <!-- Stats -->
          <div class="col-md-8 mb-4">
            <div class="row">
              <div class="col-md-4 mb-3">
                <div class="card bg-light h-100">
                  <div class="card-body text-center">
                    <h5 class="card-title">Attendance</h5>
                    <h2 class="text-primary"><%= attendanceCount %></h2>
                    <a href="/admin/attendance/<%= employee._id %>" class="btn btn-sm btn-outline-primary">View</a>
                  </div>
                </div>
              </div>
  
              <div class="col-md-4 mb-3">
                <div class="card bg-light h-100">
                  <div class="card-body text-center">
                    <h5 class="card-title">Leaves</h5>
                    <h2 class="text-warning"><%= leaveCount %></h2>
                    <a href="/admin/leave?employee=<%= employee._id %>" class="btn btn-sm btn-outline-warning">View</a>
                  </div>
                </div>
              </div>
  
              <div class="col-md-4 mb-3">
                <div class="card bg-light h-100">
                  <div class="card-body text-center">
                    <h5 class="card-title">Salary</h5>
                    <h2 class="text-success"><%= salaryCount %></h2>
                    <a href="/admin/salary?employee=<%= employee._id %>" class="btn btn-sm btn-outline-success">View</a>
                  </div>
                </div>
              </div>
            </div>
  
            <!-- Recent Activity -->
            <div class="card shadow-sm mt-3">
              <div class="card-header">
                <h5 class="mb-0">Recent Activity</h5>
              </div>
              <div class="card-body">
                <p class="text-muted">No recent activity</p>
              </div>
            </div>
          </div>
        </div>
      </main>
    </div>
  </div>