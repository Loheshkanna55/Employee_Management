<div class="container-fluid" style="margin-left: -100px;">
  <div class="row">
    <%- include('../partials/sidebar') %>

    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
      <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Task Management</h1>
        <a href="/admin/tasks/assign" class="btn btn-primary">
          <i class="fas fa-plus me-2"></i>Assign Task
        </a>
      </div>

      <div class="card shadow-sm mb-4">
        <div class="card-body">
          <% if (tasks.length > 0) { %>
            <div class="table-responsive">
              <table class="table table-hover align-middle">
                <thead>
                  <tr>
                    <th>Employee</th>
                    <th>Department</th>
                    <th>Position</th>
                    <th>Task</th>
                    <th>Due Date</th>
                    <th>Status</th>
                    <th>Action</th>
                  </tr>
                </thead>
                <tbody>
                  <% tasks.forEach(task => { %>
                    <tr>
                      <td>
                        <% if (task.assignedTo) { %>
                          <%= task.assignedTo.name %>
                        <% } else { %>
                          <span class="text-danger">User not found</span>
                        <% } %>
                      </td>
                      <td><%= task.assignedTo ? task.assignedTo.department : 'N/A' %></td>
                      <td><%= task.assignedTo ? task.assignedTo.position : 'N/A' %></td>
                      <td><%= task.title %></td>
                      <td><%= new Date(task.dueDate).toLocaleDateString() %></td>
                      <td>
                        <span class="badge bg-<%= task.status === 'completed' ? 'success' : 'warning' %>">
                          <%= task.status %>
                        </span>
                      </td>
                      <td>
                        <% if (task.status === 'pending') { %>
                          <form method="POST" action="/admin/tasks/<%= task._id %>/complete">
                            <button type="submit" class="btn btn-sm btn-primary">Mark Completed</button>
                          </form>
                        <% } else { %>
                          <span class="text-success">Completed</span>
                        <% } %>
                      </td>
                    </tr>
                  <% }); %>
                </tbody>
              </table>
            </div>
          <% } else { %>
            <p class="text-muted">No tasks found</p>
          <% } %>
        </div>
      </div>
    </main>
  </div>
</div>
